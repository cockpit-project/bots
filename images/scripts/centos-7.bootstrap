#! /bin/bash
set -eux

URL=https://cloud.centos.org/centos/7/images/
DAILIES=$(curl -s "$URL" | sed -n '/<a href="CentOS-7-x86_64-GenericCloud-.*qcow2"/ { s/^.*href="//; s_".*$__; p }')
LATEST_DAILY=$(echo "$DAILIES" | sort -u | tail -n1)

exec $(dirname $0)/lib/cloudimage.bootstrap "$1" "$URL/$LATEST_DAILY"
