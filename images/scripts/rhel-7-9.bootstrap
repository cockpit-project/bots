#!/bin/bash

set -ex

URL=http://download.devel.redhat.com/rhel-7/nightly/updates/RHEL-7/latest-RHEL-7.9/compose/Server/x86_64/images/
IMAGE=$(curl -L -s "$URL" | sed -n '/<a href=.*rhel-guest-image.*qcow2"/ { s/^.*href="//; s_".*$__; p }')

exec $(dirname $0)/lib/cloudimage.bootstrap "$1" "$URL/$IMAGE"
