#!/bin/sh
set -eu

PYEXEFILES="$(git grep -lI '^#!.*python') $(git ls-files "*.py")"

test_ruff() {
    command -v ruff >/dev/null || { echo 'no ruff installed'; return 0; }
    ruff check --no-cache . $PYEXEFILES
}

test_ruff

# run static code checks like pyflakes and pep8
flake8 $PYEXEFILES

./test-bots
